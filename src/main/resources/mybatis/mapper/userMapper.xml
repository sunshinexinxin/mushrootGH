<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hyx.apps.login.dao.impl.UserDaoImpl" >
    <!-- 字段与实体的映射 -->
    <resultMap id="userMap" type="com.hyx.apps.login.bean.User">
        <result property="userId" column="user_id" />
        <result property="userName" column="user_name" />
        <result property="userAge" column="user_age" />
        <result property="userPsd" column="user_psd" />
        <result property="userPhone" column="user_phone" />
        <result property="userAdd" column="user_add" />
        <result property="status" column="status" />
        <result property="delFlag" column="del_flag" />
        <result property="memo" column="memo" />
        <result property="ctime" column="ctime" />
    </resultMap>

    <!-- 登录查询 -->
    <select id="getUserByName" parameterType="String" resultMap="userMap">
        select * from TB_MRGH_USERS WHERE user_name = #{name,jdbcType=NVARCHAR}
    </select>
</mapper>

